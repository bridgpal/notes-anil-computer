---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			h1 { font-size: 1.2rem; margin-bottom: 1.1rem; }

			.header-row {
				display: flex;
				justify-content: space-between;
				gap: 1rem;
				color: var(--muted);
				font-weight: 600;
				padding: 0.25rem 0 0.5rem;
			}
			.header-row .right { text-align: right; white-space: nowrap; }

			.list { list-style: none; padding: 0; margin: 0; }
			.item { padding: 0.55rem 0; border-top: 0; }
			.item:first-child { border-top: 0; }

			.divider { margin: 0.75rem 0 0.25rem; }

			.row { display: flex; align-items: baseline; justify-content: space-between; gap: 1rem; }
			.name a { text-decoration: none; }
			.name a:hover { text-decoration: underline; }
			.modified { text-align: right; white-space: nowrap; color: var(--muted); }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="panel">
				<h1>Index of /</h1>

				<div class="header-row">
					<div>Name</div>
					<div class="right">Last modified</div>
				</div>
				<hr class="divider" />

				<ul class="list">
					{posts.map((post) => (
						<li class="item">
							<div class="row">
								<div class="name"><a href={`/${post.id}/`}>{post.data.title}</a></div>
								<div class="modified"><FormattedDate date={post.data.pubDate} variant="shortNumeric" /></div>
							</div>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
