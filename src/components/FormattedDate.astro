---
interface Props {
	date: Date;
	variant?: 'readable' | 'shortNumeric';
}

const { date, variant = 'readable' } = Astro.props;

const formatted =
	variant === 'shortNumeric'
		? date.toLocaleDateString('en-us', {
			year: '2-digit',
			month: '2-digit',
			day: '2-digit',
		})
		: date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		});
---

<time datetime={date.toISOString()}>{formatted}</time>
